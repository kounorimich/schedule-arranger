extends layout

block content
    div.jumbotron.my-3
        h1.display-4 予定調整くん
        p.lead 予定調整くんは、GitHubで認証でき、予定を作って出欠が取れるサービスです
    if user
        div
            a(href="/schedules/new").btn.btn-info 予定を作る
        -var hasAllSchedule = allSchedules.length > 0
        if hasAllSchedule
            h3 全ての予定
                table.table
                    tr
                        th 予定名
                        th 更新日時
                        th 作成者
                    each schedule in allSchedules
                        tr
                        td
                            a(href=`/schedules/${schedule.scheduleId}`) #{schedule.scheduleName}
                        td #{schedule.formattedUpdatedAt}
                        td #{schedule.user.username}

        - var hasMySchedule = mySchedules.length > 0
        if hasMySchedule
            h3 あなたの作った予定
            table.table
                tr
                    th 予定名
                    th 更新日時
                    th 作成者
                each schedule in mySchedules
                    tr
                    td
                        a(href=`/schedules/${schedule.scheduleId}`) #{schedule.scheduleName}
                    td #{schedule.formattedUpdatedAt}
                    td あなた (#{user.username})
